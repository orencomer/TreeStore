@model IEnumerable<TreeStore.Models.Campaign>

@{
    ViewData["Title"] = "Index";
}

<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Kampanya Ekle</a>
</p>
<br />
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Slogan)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.StartedDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateBy)
                </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slogan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateBy)
            </td>
            <td class="text-nowrap">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts {
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#tblRecords').DataTable({
            "responsive": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json"
            }
        });
    });
    </script>
}